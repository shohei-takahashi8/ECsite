<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
"http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>
	<constant name="struts.devMode" value="true" />
	<package name="com.internousdev.ecsite.action" extends="struts-default">

		<!-- GoLoginAction -->
		<action name="GoLoginAction" class="com.internousdev.ecsite.action.GoLoginAction" method="execute">
			<result name="success">login.jsp</result>
		</action>

		<!-- CreateUserAction -->
		<action name="CreateUserAction" class="com.internousdev.ecsite.action.CreateUserAction" method="execute">
			<result name="success">createUser.jsp</result>
		</action>

		<!-- CreateUserConfirmAction -->
		<action name="CreateUserConfirmAction" class="com.internousdev.ecsite.action.CreateUserConfirmAction" method="execute">
			<result name="success">createUserConfirm.jsp</result>
			<result name="error">createUser.jsp</result>
		</action>

		<!-- CreateUserCompleteAction -->
		<action name="CreateUserCompleteAction" class="com.internousdev.ecsite.action.CreateUserCompleteAction" method="execute">
			<result name="success">createUserComplete.jsp</result>
		</action>

		<!-- LoginAction -->
		<action name="LoginAction" class="com.internousdev.ecsite.action.LoginAction" method="execute">
			<result name="success">home.jsp</result>
			<result name="error">login.jsp</result>
		</action>

		<!-- AddCartAction -->
		<action name="AddCartAction" class="com.internousdev.ecsite.action.AddCartAction" method="execute">
			<result name="success">cart.jsp</result>
		</action>

		<!-- CheckUserInfoAction -->
		<action name="CheckUserInfoAction" class="com.internousdev.ecsite.action.CheckUserInfoAction" method="execute">
			<result name="success">userInfo.jsp</result>
		</action>

		<!-- DeleteCartAction -->
		<action name="DeleteCartAction" class="com.internousdev.ecsite.action.DeleteCartAction" method="execute">
			<result name="success">cart.jsp</result>
			<result name="error">cart.jsp</result>
		</action>

		<!-- PaymentAction -->
		<action name="PaymentAction" class="com.internousdev.ecsite.action.PaymentAction" method="execute">
			<result name="success">paymentConfirm.jsp</result>
			<result name="error">cart.jsp</result>
		</action>

		<!-- PaymentCompleteAction -->
		<action name="PaymentCompleteAction" class="com.internousdev.ecsite.action.PaymentCompleteAction" method="execute">
			<result name="success">paymentComplete.jsp</result>
			<result name="error">paymentConfirm.jsp</result>
		</action>

		<!-- GoHomeAction -->
		<action name="GoHomeAction" class="com.internousdev.ecsite.action.GoHomeAction" method="execute">
			<result name="success">home.jsp</result>
		</action>

		<!-- BuyItemHistoryAction -->
		<action name="BuyItemHistoryAction" class="com.internousdev.ecsite.action.BuyItemHistoryAction" method="execute">
			<result name="success">buyItemHistory.jsp</result>
			<result name="error">buyItemHistory.jsp</result>
		</action>

		<!-- GoCartAction -->
		<action name="GoCartAction" class="com.internousdev.ecsite.action.GoCartAction" method="execute">
			<result name="success">cart.jsp</result>
		</action>

		<!-- LogoutAction -->
		<action name="LogoutAction" class="com.internousdev.ecsite.action.LogoutAction" method="execute">
			<result name="success">login.jsp</result>
		</action>

		<!-- DeleteItemHistoryAction -->
		<action name="DeleteItemHistoryAction" class="com.internousdev.ecsite.action.DeleteItemHistoryAction" method="execute">
			<result name="success">buyItemHistory.jsp</result>
			<result name="error">buyItemHistory.jsp</result>
		</action>

		<!-- SearchItemAction -->
		<action name="SearchItemAction" class="com.internousdev.ecsite.action.SearchItemAction" method="execute">
			<result name="success">buyItem.jsp</result>
		</action>

		<!-- ChangePassAction -->
		<action name="ChangePassAction" class="com.internousdev.ecsite.action.ChangePassAction" method="execute">
			<result name="success">changePass.jsp</result>
		</action>

		<!-- ChangePassCompleteAction -->
		<action name="ChangePassCompleteAction" class="com.internousdev.ecsite.action.ChangePassCompleteAction" method="execute">
			<result name="success">changePassComplete.jsp</result>
			<result name="error">changePass.jsp</result>
		</action>

		<!-- ItemDetailsAction -->
		<action name="ItemDetailsAction" class="com.internousdev.ecsite.action.ItemDetailsAction" method="execute">
			<result name="success">itemDetails.jsp</result>
		</action>

		<!-- ReviewAction -->
		<action name="ReviewAction" class="com.internousdev.ecsite.action.ReviewAction" method="execute">
			<result name="success">reviewComplete.jsp</result>
			<result name="error">itemDetails.jsp</result>
		</action>

		<!-- CreateDestinationAction -->
		<action name="CreateDestinationAction" class="com.internousdev.ecsite.action.CreateDestinationAction" method="execute">
			<result name="success">createDestination.jsp</result>
		</action>

		<!-- CreateDestinationConfiormAction -->
		<action name="CreateDestinationConfirmAction" class="com.internousdev.ecsite.action.CreateDestinationConfirmAction" method="execute">
			<result name="success">createDestinationConfirm.jsp</result>
			<result name="error">createDestination.jsp</result>
		</action>

		<!-- CreateDestinationCompleteAction -->
		<action name="CreateDestinationCompleteAction" class="com.internousdev.ecsite.action.CreateDestinationCompleteAction" method="execute">
			<result name="success">createDestinationComplete.jsp</result>
		</action>



	</package>
</struts>